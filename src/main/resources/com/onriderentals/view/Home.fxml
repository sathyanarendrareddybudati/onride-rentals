<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onriderentals.controller.HomeController">
   <content>
      <VBox spacing="0" style="-fx-font-family: 'Segoe UI', Arial, sans-serif;">
         <!-- Shared Navigation Bar -->
         <fx:include source="Navbar.fxml"/>

         <!-- Hero Section -->
         <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">
            <children>
               <VBox layoutX="0" layoutY="0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="CENTER">
                  <children>

                     <!-- Hero Title and Subtitle -->
                     <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 40px;">
                        <children>
                           <Label text="Drive Your Dreams" style="-fx-font-size: 56px; -fx-font-weight: bold; -fx-text-fill: white; -fx-text-alignment: center;">
                              <font>
                                 <Font size="56.0" />
                              </font>
                           </Label>
                           <Label text="Rent with Ease" style="-fx-font-size: 48px; -fx-text-fill: #ffd700; -fx-text-alignment: center;">
                              <font>
                                 <Font size="48.0" />
                              </font>
                           </Label>
                           <Label text="Experience premium bikes and cars at your fingertips. Book instantly, ride freely, and explore without limits." style="-fx-font-size: 16px; -fx-text-fill: white; -fx-text-alignment: center; -fx-wrap-text: true;">
                              <font>
                                 <Font size="16.0" />
                              </font>
                           </Label>
                        </children>
                     </VBox>

                     <!-- Search Bar -->
                     <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20px 40px;">
                        <children>
                           <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 25px; -fx-background-color: white; -fx-background-radius: 10;">
                              <children>
                                 <TextField fx:id="searchLocationField" promptText="Location" style="-fx-font-size: 14px; -fx-padding: 10px; -fx-min-width: 150px;" />
                                 <DatePicker fx:id="pickupDatePicker" style="-fx-font-size: 14px; -fx-padding: 10px;" promptText="Pick-up  dd/mm/yyyy" />
                                 <DatePicker fx:id="returnDatePicker" style="-fx-font-size: 14px; -fx-padding: 10px;" promptText="Return  dd/mm/yyyy" />
                                 <Button fx:id="searchButton" onAction="#handleSearch" text="Search 500+ Vehicles" style="-fx-padding: 10px 25px; -fx-font-size: 14px; -fx-background-color: #667eea; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5; -fx-cursor: hand;" />
                              </children>
                           </HBox>

                           <!-- Stats Row -->
                           <HBox alignment="CENTER" spacing="60.0" style="-fx-padding: 20px;">
                              <children>
                                 <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                       <Label text="500+" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;">
                                          <font>
                                             <Font size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="Vehicles" style="-fx-font-size: 14px; -fx-text-fill: white;">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                       <Label text="10K+" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;">
                                          <font>
                                             <Font size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="Happy Customers" style="-fx-font-size: 14px; -fx-text-fill: white;">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                                 <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                       <Label text="50+" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;">
                                          <font>
                                             <Font size="28.0" />
                                          </font>
                                       </Label>
                                       <Label text="Locations" style="-fx-font-size: 14px; -fx-text-fill: white;">
                                          <font>
                                             <Font size="14.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </VBox>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                  </children>
               </VBox>
            </children>
         </AnchorPane>
        
         <!-- Rest of content remains structurally similar but styled -->
         <!-- Our Fleet Section -->
         <VBox spacing="30.0" style="-fx-padding: 60px 40px; -fx-background-color: #f8f9fa;">
            <children>
               <VBox alignment="CENTER" spacing="15.0">
                  <children>
                     <Label text="OUR FLEET" style="-fx-font-size: 12px; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-letter-spacing: 2;" />
                     <Label text="Choose Your Ride" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                     <Label text="From powerful motorcycles to luxury cars, find the perfect vehicle for your next journey" style="-fx-font-size: 16px; -fx-text-fill: #666; -fx-text-alignment: center;" />
                  </children>
               </VBox>

               <!-- Vehicle Categories -->
               <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: 20px;">
                  <children>
                     <!-- Bikes Category -->
                     <VBox spacing="15.0" alignment="CENTER" style="-fx-padding: 30px; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 250px;">
                        <children>
                           <Label text="200+ Available" style="-fx-font-size: 14px; -fx-text-fill: #667eea; -fx-font-weight: bold;" />
                           <Label text="Bikes" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                           <Label text="Sport bikes, cruisers, and scooters for every adventure" style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-text-alignment: center;" />
                           <Label text="From $15/day" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #667eea;" />
                           <Button fx:id="bikesButton" onAction="#handleBikesClick" text="Browse Bikes" style="-fx-padding: 10px 20px; -fx-font-size: 14px; -fx-background-color: #667eea; -fx-text-fill: white;" />
                        </children>
                     </VBox>

                     <!-- Cars Category -->
                     <VBox spacing="15.0" alignment="CENTER" style="-fx-padding: 30px; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-min-width: 250px;">
                        <children>
                           <Label text="300+ Available" style="-fx-font-size: 14px; -fx-text-fill: #764ba2; -fx-font-weight: bold;" />
                           <Label text="Cars" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;" />
                           <Label text="Luxury sedans, SUVs, and sports cars at your service" style="-fx-font-size: 14px; -fx-text-fill: #666; -fx-text-alignment: center;" />
                           <Label text="From $45/day" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #764ba2;" />
                           <Button fx:id="carsButton" onAction="#handleCarsClick" text="Browse Cars" style="-fx-padding: 10px 20px; -fx-font-size: 14px; -fx-background-color: #764ba2; -fx-text-fill: white;" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
         
         <!-- CTA Section -->
         <VBox spacing="30.0" style="-fx-padding: 60px 40px; -fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-alignment: center;">
            <children>
               <Label text="Ready to Start Your Journey?" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;" />
               <Label text="Join thousands of happy customers who trust OnRide for their transportation needs." style="-fx-font-size: 16px; -fx-text-fill: white;" />
               <HBox alignment="CENTER" spacing="20.0">
                  <children>
                     <Button fx:id="ctaGetStartedBtn" onAction="#handleGetStarted" text="Get Started Now" style="-fx-padding: 12px 30px; -fx-font-size: 14px; -fx-background-color: white; -fx-text-fill: #667eea; -fx-font-weight: bold;" />
                     <Button fx:id="ctaListVehicleBtn" onAction="#handleListVehicle" text="List Your Vehicle" style="-fx-padding: 12px 30px; -fx-font-size: 14px; -fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-weight: bold;" />
                  </children>
               </HBox>
            </children>
         </VBox>

      </VBox>
   </content>
</ScrollPane>

