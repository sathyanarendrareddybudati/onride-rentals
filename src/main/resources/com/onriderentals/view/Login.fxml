<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onriderentals.controller.LoginController" styleClass="root" stylesheets="@styles.css">
    
    <fx:include source="Navbar.fxml"/>
    
    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label text="Login" styleClass="label-title">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox maxWidth="300" spacing="10" styleClass="card" style="-fx-padding: 30;">
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <Button fx:id="loginButton" onAction="#login" text="Login" maxWidth="Infinity" styleClass="button-primary" />
            <Button fx:id="registerButton" onAction="#goToRegister" text="Create Account" maxWidth="Infinity" styleClass="button-ghost" />
        </VBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
    </VBox>
</VBox>


