<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            styleClass="root"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.onride.controller.SignUpViewController">

    <center>
        <VBox alignment="CENTER"
              spacing="20"
              maxWidth="420"
              styleClass="login-card">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Logo -->
            <Label text="ðŸš— Onride Rental" styleClass="logo"/>

            <!-- Tabs -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login"
                        onAction="#handleSignInLinkAction"
                        styleClass="tab"/>
                <Button text="Sign Up"
                        styleClass="tab-active"/>
            </HBox>

            <!-- Title -->
            <Label text="Create account" styleClass="title"/>
            <Label text="Fill in the details to get started"
                   styleClass="subtitle"/>

            <!-- Name -->
            <VBox spacing="5">
                <Label text="Name" styleClass="field-label"/>
                <TextField fx:id="nameField"
                           promptText="Your full name"
                           styleClass="input"/>
            </VBox>

            <!-- Email -->
            <VBox spacing="5">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField"
                           promptText="you@example.com"
                           styleClass="input"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                               styleClass="input"/>
            </VBox>

            <!-- Confirm Password -->
            <VBox spacing="5">
                <Label text="Confirm Password" styleClass="field-label"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                               styleClass="input"/>
            </VBox>

            <!-- Sign Up Button -->
            <Button text="Create Account"
                    onAction="#handleSignUpButtonAction"
                    styleClass="primary-button"
                    maxWidth="Infinity"/>

            <!-- Footer link -->
            <HBox spacing="6" alignment="CENTER">
                <Label text="Already have an account?"
                       styleClass="subtitle"/>
                <Hyperlink text="Sign In"
                           onAction="#handleSignInLinkAction"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>
