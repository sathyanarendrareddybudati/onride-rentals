<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.MainViewController">
    <left>
        <VBox styleClass="sidebar">
            <Button onAction="#navigateToDashboard" styleClass="sidebar-button" text="Dashboard" />
            <Button onAction="#navigateToVehicles" styleClass="sidebar-button" text="Vehicles" />
            <Button onAction="#navigateToBookings" styleClass="sidebar-button" text="My Bookings" />
            <Button onAction="#navigateToHostVehicle" styleClass="sidebar-button" text="Host a Vehicle" />
            <Button onAction="#navigateToHelp" styleClass="sidebar-button" text="Help" />
            <Button onAction="#logout" styleClass="sidebar-button" text="Logout" />
        </VBox>
    </left>
    <center>
        <VBox fx:id="contentArea" styleClass="content-area" />
    </center>
</BorderPane>
