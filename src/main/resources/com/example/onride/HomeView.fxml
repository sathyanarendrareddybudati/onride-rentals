<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<ScrollPane fitToWidth="true"  styleClass="root"
            stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.HomeViewController">
    <content>
        <VBox alignment="TOP_CENTER" styleClass="main-container">
            <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="navbar">
                <children>
                    <HBox alignment="CENTER" spacing="10">
                        <Circle radius="12" fill="#FF8C00"/>
                        <Label styleClass="logo-text" text="OnRide" />
                    </HBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="nav-link" text="Home" />
                    <Label styleClass="nav-link" text="Vehicles" />
                    <Button styleClass="login-link-btn" text="Sign In" />
                    <Button styleClass="primary-button" text="Get Started" />
                </children>
                <padding>
                    <Insets bottom="15.0" left="80.0" right="80.0" top="15.0" />
                </padding>
            </HBox>

            <VBox alignment="CENTER" spacing="25.0" styleClass="hero-section">
                <children>
                    <Label styleClass="badge" text="â— Premium Vehicle Rentals" />
                    <Label styleClass="hero-main-text" text="Drive Your Dreams" />
                    <Label styleClass="hero-sub-text" text="Rent with Ease" />
                    <Label styleClass="hero-description" maxWidth="600" text="Experience premium bikes and cars at your fingertips. Book instantly, ride freely, and explore without limits." textAlignment="CENTER" wrapText="true" />
                    
                    <HBox alignment="CENTER" spacing="15.0" styleClass="search-bar-container">
                        <VBox spacing="5">
                             <Label text="Location" styleClass="input-label"/>
                             <TextField promptText="Enter city" styleClass="search-input" />
                        </VBox>
                        <Separator orientation="VERTICAL" />
                        <VBox spacing="5">
                             <Label text="Pick-up" styleClass="input-label"/>
                             <DatePicker promptText="dd/mm/yyyy" styleClass="search-date" />
                        </VBox>
                        <Button styleClass="primary-button-large" text="Search" />
                    </HBox>

                    <HBox alignment="CENTER" spacing="50" styleClass="stats-row">
                        <VBox alignment="CENTER"><Label styleClass="stat-num" text="500+"/><Label styleClass="stat-label" text="Vehicles"/></VBox>
                        <VBox alignment="CENTER"><Label styleClass="stat-num" text="10K+"/><Label styleClass="stat-label" text="Happy Customers"/></VBox>
                        <VBox alignment="CENTER"><Label styleClass="stat-num" text="50+"/><Label styleClass="stat-label" text="Locations"/></VBox>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="100.0" top="80.0" />
                </padding>
            </VBox>

            <VBox alignment="CENTER" spacing="40.0" styleClass="section-container">
                <children>
                    <Label styleClass="section-subtitle" text="OUR FLEET" />
                    <Label styleClass="section-title" text="Choose Your Ride" />
                    <HBox alignment="CENTER" spacing="30.0">
                        <VBox styleClass="fleet-card">
                            <Label styleClass="card-badge" text="200+ Available" />
                            <Label styleClass="card-header" text="Bikes" />
                            <Label text="From $15/day" styleClass="card-price"/>
                        </VBox>
                        <VBox styleClass="fleet-card">
                            <Label styleClass="card-badge" text="300+ Available" />
                            <Label styleClass="card-header" text="Cars" />
                            <Label text="From $45/day" styleClass="card-price"/>
                        </VBox>
                    </HBox>
                </children>
                <padding><Insets bottom="80" top="80"/></padding>
            </VBox>
        </VBox>
    </content>
</ScrollPane>