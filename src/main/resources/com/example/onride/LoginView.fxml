<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            styleClass="root"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.onride.controller.LoginViewController">

    <center>
        <VBox alignment="CENTER" spacing="20"
              maxWidth="420"
              styleClass="login-card">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Logo -->
            <Label text="ðŸš— Onride Rental" styleClass="logo"/>

            <!-- Tabs -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" styleClass="tab-active"/>
                <Button text="Sign Up" styleClass="tab"/>
            </HBox>

            <!-- Headings -->
            <Label text="Welcome back" styleClass="title"/>
            <Label text="Sign in to access your dashboard" styleClass="subtitle"/>

            <!-- Email -->
            <VBox spacing="5">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField"
                           promptText="you@example.com"
                           styleClass="input"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                               styleClass="input"/>
            </VBox>

            <!-- Sign In -->
            <Button text="Sign In"
                    onAction="#handleSignInButtonAction"
                    styleClass="primary-button"
                    maxWidth="Infinity"/>

            <!-- Links -->
            <HBox spacing="8" alignment="CENTER">
                <Hyperlink text="Forgot password?"
                           onAction="#handleForgotPasswordLinkAction"/>
                <Label text="|" styleClass="divider"/>
                <Hyperlink text="Sign Up"
                           onAction="#handleSignUpLinkAction"/>
            </HBox>

            <!-- Demo Accounts -->
            <VBox spacing="5" styleClass="demo-box">
                <Label text="Demo accounts:" styleClass="demo-title"/>
                <Label text="Admin: admin@demo.com / admin123"/>
                <Label text="Renter: renter@demo.com / renter123"/>
                <Label text="Customer: customer@demo.com / customer123"/>
            </VBox>

        </VBox>
    </center>
</BorderPane>
